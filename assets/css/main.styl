@require 'reset'
@require 'helpers'

html, body
  width 100%
  height 100%
  font-family Karla, sans-serif
  color white

body

  background url("../img/loop.gif") no-repeat center center
  background-size cover

#stream
  display none

#listen
  listen-color = white
  display block
  position absolute
  width 8em
  margin-left -4em
  height 2em
  margin-top -1em
  line-height @height
  left 50%
  top 50%
  border 4px solid listen-color
  color listen-color
  font-size 24px
  font-weight bold
  text-decoration none
  text-align center
  i
    margin-right 10px
  &:hover
    color black
    background white


#live
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  height 100%
  z-index -1
  .image
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    z-index 0
    background-size cover
  .texture
    position absolute
    width 100%
    height 100%
    background rgba(0,0,0,0.5) url("/img/pattern.png")
    z-index 1

#warning
  position absolute
  bottom 120px
  left 20px
  width 200px
  font-size 14px

#about
  font-size 32px
  line-height 1.8em
  padding 80px 120px
  strong
    font-weight bold
    border-bottom 3px solid white

#what
  position absolute
  bottom 120px
  right 20px
  a
    color white
    text-decoration none
  .spacer
    margin 0 20px



#programacion
  position relative
  margin 180px auto
  margin-left auto
  margin-right auto
  box-sizing border-box
  width 900px
  > div
    float left
    position relative
    width 180px
    h2
      padding 20px
    .show
      position relative
      padding 20px
      border 4px solid white
      border-bottom none
      margin 0 -2px
      top -4px
      &:last-child
        border-bottom @border
      .time
        color #ffb245
        font-size 11px
      .who
        font-size 12px


  .miercoles
    top -80px
  .viernes
    top 80px


footer
  position absolute
  width 100%
  bottom 0
  overflow hidden
  background #252525
  & > *
    width 200px
    height 0
    padding-top 100px
    overflow hidden
  .sep
    float left
    background url("/img/sep.png") no-repeat
  .conaculta
    float right
    background url("/img/conaculta.png") no-repeat
